<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QualityCaps</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:white; font-size:larger">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" style=" color:palevioletred; font-size:20px; font:bold;" ><img src="~/images/logo.jpg" style="height:50px;padding:0px;" alt="ASP.NET" class="img-responsive" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:dimgray">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:black" ;">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:dimgray">Contact</a></li>

                    @if (User.IsInRole("Admin"))
    {
                <li><a asp-area="" asp-controller="AdminApplicationUsers" asp-action="Index" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:dimgray" ;">Members</a></li>
                <li><a asp-area="" asp-controller="Orders" asp-action="Index" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:black">Orders</a></li>
                <li><a asp-area="" asp-controller="Caps" asp-action="Index" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:dimgray;">Caps</a></li>
                <li><a asp-area="" asp-controller="Suppliers" asp-action="Index" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:black">Suppliers</a></li>
                <li><a asp-area="" asp-controller="Categories" asp-action="Index" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:dimgray;">Categories</a></li>


}
else
{
                <li><a asp-area="" asp-controller="MemberCaps" asp-action="Index" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:black">Caps</a></li>
}

                    @if (User.IsInRole("Member"))
    {
                <li><a asp-area="" asp-controller="Orders" asp-action="OrdersPlaced" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color:black">View Orders</a></li>


}

                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            @if (!User.IsInRole("Admin"))
            {@await Component.InvokeAsync("ShoppingCartViewModel")}


        </div>
        <br />        <br />        <br />        <br />
    





    </div>
    <footer style="background-color:black; color:white;left: 0;bottom: 0;width: 100%; ">

        <div class="row" style="padding:10px;">
            <div class="col-md-3">
                <p>
                    Contact us <br><br>

                    email:siddharthkureel@gmail.com<br>
                    <br>
                    phone:564563635

                </p>
            </div>
            <div class="col-md-3">
                <div class="row">

                    <h5>LINKS</h5>
                    <div class="col-md-5">
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-md-5"></div>
                </div>

            </div>

            <div class="col-md-3" padding="20px">
                <br />
                <br />
                <br />
                <input type="text" placeholder="email">
                <button style="color:#000">Subscribe</button>
            </div>
            <div class="col-md-3">
                copyright
                <br>
                <h3>Follow us:</h3>
                <button style="background-color:#03C; color: azure;">facebook</button>
                <button style="background-color:#0CF; color: azure;">twitter</button>

            </div>


        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
